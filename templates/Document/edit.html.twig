{% extends 'base.html.twig' %}
{% block title %}{{ document is defined ? 'Bewerken: ' ~ document.title : 'Nieuwe Set' }}{% endblock %}

{% block body %}
    <div class="wrap">
        <div class="card">
            <h1 class="title">{{ document is defined ? 'Bewerken: ' ~ document.title : 'Nieuwe Symphonic eMotions Set' }}</h1>
            <p class="subtitle">Symphonic eMotion Set bestanden kun je voorzien van midi bestanden die je in een track kan selecteren</p>

            {{ form_start(form, { attr: { enctype: 'multipart/form-data' } }) }}
            {{ form_row(form.title) }}
            {# slug is hidden in FormType (mapped: false) #}
            {{ form_row(form.semVersion) }}
            {{ form_row(form.published) }}
            {{ form_row(form.midiFiles) }}

            <button class="btn" type="submit">Opslaan</button>
            <a class="btn secondary" href="{{ path('app_dashboard') }}" style="margin-left:8px">Terug</a>
            {{ form_end(form) }}
        </div>
    </div>

    {% if assets is defined and assets|length %}
        <hr>
        <h2>Assets</h2>
        <table>
            <thead>
            <tr>
                <th>Bestand</th>
                <th>Grootte</th>
                <th>Pad</th>
                <th>Acties</th>
            </tr>
            </thead>
            <tbody>
            {% for a in assets %}
                <tr>
                    <td>{{ a.originalName }}</td>
                    <td>
                        {% if a.size is not null %}
                            {{ (a.size / 1024)|number_format(1, '.', ' ') }} KB
                        {% else %}
                            â€“
                        {% endif %}
                    </td>
                    <td><code>{{ a.storagePath }}</code></td>
                    <td>
                        <a href="{{ path('doc_asset_download', { id: document.id, assetId: a.id }) }}">Download</a>

                        <form action="{{ path('doc_asset_delete', { id: document.id, assetId: a.id }) }}"
                              method="post"
                              style="display:inline"
                              onsubmit="return confirm('Weet je zeker dat je dit bestand wilt verwijderen?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete-asset-' ~ a.id) }}">
                            <button class="btn btn-link">Verwijder</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
